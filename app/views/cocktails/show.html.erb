<div class="cocktail">
  <div class="cocktail_name">
    <h1> <%= @cocktail.name %></h1>
  </div>

  <div class="ingredients">
  <h3>Ingredients:</h3>
    <% @cocktail.doses.each do |dose| %>
      <ul>
      <li> <%= dose.description %> | <%= dose.ingredient.name %> <%= link_to "🗑️", dose_path(dose), method: :delete, data: { confirm: "are you sure mate?"} %></li>
      </ul>
    <% end %>
  <%= link_to "➕ add ingredient", new_cocktail_dose_path(@cocktail) %>
  </div>

  <div>
  <%= link_to "⬅️ All cocktails", cocktails_path, class: "btn btn-warning" %>
  </div>
</div>
